{
  "extends": "@saritasa/tslint-config-angular",
  "rules": {
    "directive-selector": [
      true,
      "attribute",
      "sha",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "sha",
      "kebab-case"
    ]
  },
  "linterOptions": {
    "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "**/e2e/**",
      "**/polyfills.ts",
      "**/test.ts"
    ]
  }
}
